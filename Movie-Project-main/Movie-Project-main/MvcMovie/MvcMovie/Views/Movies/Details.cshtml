@model MvcMovie.Models.Movie

@{ ViewData["Title"] = "Details"; }

<style>
    .button {
        padding: 5px 16px;
        border-radius: 25px;
        background-color: yellow;
        color: #000;
        margin-bottom: 20px;
        font-size: 20px;
    }

    h1 {
        color: #ff9f00;
    }

    .btl {
        color: #ffae42;
        display: flex;
        align-items: center;
        font-size: 16px;
    }

    .row {
        font-size: 20px;
    }

    #comm {
        width:30%;
        height: 100px;
    }
    #name {
        width: 30%;
       
    }
</style>

<h1>Details</h1>


<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DirectedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DirectedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DistributedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DistributedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RunningTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RunningTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Language)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Language)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="button">Edit</a>
    <a class="btl" asp-action="Index">Back to List</a>
</div>

<br />

<table class="table">
    <thead>
        <tr class="table-top">
            <th>
                Name
            </th>
            <th>
                Review
            </th>
            <th>
                Review Date
            </th>
        </tr>
    </thead>
</table>


    <br />
    <form>
        <label for="name">Name</label> <br />
        <input type="text" id="name" name="name" /><br />
        <label for="Comm" >Comment</label><br />
        <input type="text" id="comm" name="comment" placeholder="Add a review" /><br /><br />
        <input type="submit" value="Submit" class="btn btn-primary button" />
    </form>



